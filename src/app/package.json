    "@angular/http": "^4.0.0",
    "@angular/platform-browser": "^4.0.0",
    "@angular/platform-browser-dynamic": "^4.0.0",
    "@angular/router": "^4.0.0",
    "@types/autosize": "^3.0.4",
    "autosize": "^3.0.21",
    "concurrently": "^3.5.0",
    "core-js": "^2.4.1",
    "fs-extra": "^3.0.1",
    "monaco-editor": "^0.8.3",
    "rxjs": "^5.1.0",
    "zone.js": "^0.8.4"
  },
