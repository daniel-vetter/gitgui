  "main": "main.js",
  "scripts": {
    "ng": "ng",
    "start": "electron ../../build/app",
    "build": "ng build --progress=false --prod && webpack --hide-modules --env=prod",
    "build-watch": "concurrently \"webpack --hide-modules --env=prod --watch\" \"ng build --progress=false -w\" --kill-others --names \"backend,frontend\"",
    "test": "ng test --single-run --progress=false",
	"test-watch": "ng test",
    "lint": "tslint frontend/**/.*.ts && tslint backend/**/.*.ts && tslint shared/**/.*.ts",
    "e2e": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^4.0.0",
