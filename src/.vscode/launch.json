{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/../build/app/main.js",
            "stopOnEntry": false,
            "args": [],
            "cwd": "${workspaceRoot}/../build/app",
            "protocol": "auto",
            
            "runtimeArgs": [
                ".",
                "--devtools",
                "--reload-on-change"
            ],
            "env": {},
            "sourceMaps": true,
            "linux": {
                "runtimeExecutable": "${workspaceRoot}/main/node_modules/electron/dist/electron"
            },
            "windows": {
                "runtimeExecutable": "${workspaceRoot}/main/node_modules/electron/dist/electron.exe"
            }
        }
    ],
}
